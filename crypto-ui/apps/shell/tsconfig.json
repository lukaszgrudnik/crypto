{
  // Extends the base configuration from a parent tsconfig
  "extends": ["../../tsconfig.json"],

  "compilerOptions": {
    // Sets the base directory for resolving non-relative module names
    "baseUrl": ".",

    // Allows you to define path aliases for module imports
    "paths": {
      // Any import (e.g., import X from 'foo') will try to resolve to ./@mf-types/foo
      "*": ["./@mf-types/*"]
    }
  }
}
